<!-- header -->
<%- include("../common/header/header.ejs"); %>
<!-- breadcrumb -->
<%- include("../common/menu/menu.ejs"); %>

<!-- Breadcrumb Begin -->
<div class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__links">
                    <a href="./"><i class="fa fa-home"></i> Home</a>
                    <span>All Bidding Products</span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->
<!-- Cart Section Begin -->
<section class="shop-cart spad">
    <div class="container bg-white p-5 rounded">
        <div class="row">
            <div class="col-lg-4 col-md-4">
                <div class="section-title">
                    <h4>Cart</h4>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="shop__cart__table">
                    <table>
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Current Price</th>
                                <th>Your Price</th>
                                <th>Current Winner</th>
                            </tr>
                        </thead>
                        <tbody>
                            <%if(products){%>
                                <%for(let i = 0; i < products.length; i++){%>
                                    <%const product = products[i];%>
                                    <tr>
                                        <td class="cart__product__item">
                                            <img src="<%-product._id.productImage%>" alt="<%-product._id.productName%>" height='100' width='100'>
                                            <div class="cart__product__item__title">
                                                <h6><a href="/products/<%-product._id.productId%>"><%-product._id.productName%></a></h6>
                                                <div class="rating">
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                    <i class="fa fa-star"></i>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="cart__price">$ <p id="<%-product._id.productId%>"><%-winners[i].price%></p></td>
                                        <td class="cart__price">
                                            $ <p><%-product.price%></p>
                                        </td>
                                        <%if(user._id == winners[i].winnerId){%>
                                            <td class="cart__total" class="text-success">You</td>
                                        <%}else{%>
                                            <td class="cart__total"><%-winners[i].winnerId%></td>
                                        <%}%>
                                    </tr>
                            <%}}else{%>
                                <tr>
                                    <h3>No Product is Bidding.<a href="/products">let's Bidding</a></h3>
                                </tr>
                            <%}%>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Cart Section End -->
<!-- footer -->
<%- include("../common/footer/footer.ejs"); %>
