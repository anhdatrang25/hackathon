<!-- header -->
<%- include("../common/header/header.ejs"); %>
<!-- breadcrumb -->
<%- include("../common/menu/menu.ejs"); %>
<!-- Breadcrumb Begin -->
<div class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__links">
                    <a href="./"><i class="fa fa-home"></i> Home</a>
                    <span>Product Details</span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->

<!-- Product Details Section Begin -->
<section class="top__area spad">
    <div class="container bg-white p-5 rounded">
        <div class="row">
            <div class="col-lg-6">
                <div class="product__details__pic">
                    <div class="product__details__pic__left product__thumb nice-scroll">
                        <a class="pt active" href="#product-1">
                            <img src="<%-product.image%>" alt="Product image 1">
                        </a>
                        <a class="pt" href="#product-2">
                            <img src="<%-product.image%>" alt="Product image 2">
                        </a>
                        <a class="pt" href="#product-3">
                            <img src="<%-product.image%>" alt="Product image 3">
                        </a>
                        <a class="pt" href="#product-4">
                            <img src="<%-product.image%>" alt="Product image 4">
                        </a>
                    </div>
                    <div class="product__details__slider__content">
                        <div class="product__details__pic__slider owl-carousel">
                            <img data-hash="product-1" class="product__big__img" src="<%-product.image%>"
                                alt="Product image 1">
                            <img data-hash="product-2" class="product__big__img" src="<%-product.image%>"
                                alt="Product image 2">
                            <img data-hash="product-3" class="product__big__img" src="<%-product.image%>"
                                alt="Product image 3">
                            <img data-hash="product-4" class="product__big__img" src="<%-product.image%>"
                                alt="Product image 4">
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="product__details__text">
                    <h3><%-product.name%><span>Sold by: <a href="/user/profile-seller/<%-seller._id%>/<%-product._id%>"><b><%-seller.username%></b></a></span></h3>

                    <div class="rating">
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <span>( 138 watches )</span>
                    </div>
                    <div class="product__details__widget">
                        <ul>
                            <li>
                                <span>Time:</span>
                                <input type="hidden" id="timerdate" value="<%-product.aucEndTime%>">
                                <p id="countdown-time"></p>
                            </li>
                            <li>
                                <span>Current winner:</span>
                                <p><%-userWithHighestPrice%></p>
                            </li>
                        </ul>
                    </div>
                    <div class="product__details__price pt-5">
                        <span class="text-danger">$</span>
                        <span id="<%-product._id%>" style="text-decoration: none;" class="text-danger"><%-product.price%></span>
                    </div>
                    <div class="product__details__button">
                        <div class="quantity">
                            <span>Expected price:</span>
                            <div class="pro-qty">
                                <input
                                    type="text"
                                    value="<%-product.nextPrice%>"
                                    min="<%-product.nextPrice%>"
                                    step="<%-product.priceStep%>"
                                    id="input-price<%-product._id%>"
                                >
                            </div>
                        </div>
                        <button class="cart-btn" onclick="onBiddingProduct('<%-product._id%>')"><span class="icon_bag_alt"></span> Bid</button>
                    </div>

                </div>
            </div>
            <div class="col-lg-12">
                <div class="product__details__tab">
                    <ul class="nav nav-tabs" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" href="#tabs-1" role="tab">Description</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#tabs-2" role="tab">Delivery</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#tabs-3" role="tab">Reviews (<span>2</span>)</a>
                        </li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane active" id="tabs-1" role="tabpanel">
                            <h6>Description</h6>
                            <p><%-product.description%></p>
                        </div>
                        <div class="tab-pane" id="tabs-2" role="tabpanel">
                            <h6>Delivery</h6>
                            <p>Chúng tôi sẽ vận chuyển đơn hàng này trong 15 ngày làm việc gần nhất.</p>
                            <p>Vui lòng chuẩn bị sẵn số tiền trên.</p>
                        </div>
                        <div class="tab-pane" id="tabs-3" role="tabpanel">
                            <h6>Reviews (<span>2</span>)</h6>
                            <div class="col-md-12">
                                <form action="/user/profile-seller/" method="post">
                                    <input id="ratings-hidden" name="rating" type="hidden">
                                    <textarea class="form-control animated" cols="50" id="new-review" name="comment" placeholder="Enter your review here..." rows="4"></textarea>
                                    <input type="hidden" id="idProduct" name="rating">
                                    <input type="hidden" id="idSeller" name="rating">
                                    <div class="text-right">
                                      <div id="rating">
                                        <input type="radio" id="star5" name="rating" value="5" checked/>
                                        <label class = "full" for="star5" title="5 stars"></label>
                      
                                        <input type="radio" id="star4" name="rating" value="4" />
                                        <label class = "full" for="star4" title="4 stars"></label>
                      
                                        <input type="radio" id="star3" name="rating" value="3" />
                                        <label class = "full" for="star3" title="3 stars"></label>
                      
                                        <input type="radio" id="star2" name="rating" value="2" />
                                        <label class = "full" for="star2" title="2 stars"></label>
                      
                                        <input type="radio" id="star1" name="rating" value="1" />
                                        <label class = "full" for="star1" title="1 star"></label>
                                      </div>
                                      <button class="btn btn-success mt-2 btn-review" type="button">Review</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Product Details Section End -->
    <!-- footer -->
<%- include("../common/footer/footer.ejs"); %>
